<% include ../partials/header %>

<div class="container" >
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fa fa-map" aria-hidden="true"></i>  Welcome to YelpCamp!</h1>
            <p>The rainy forests are the best to do camping!</p>
            <p>
              <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
            </p>
            <p>
                <form action="/campgrounds" method="GET" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Campground search..." class="form-control">
                        <input type="submit" value="Search" class="btn btn-default">
                    </div>
                </form>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                         <img id="image" src="<%=campground.image %>">
                    <div class="caption">
                        <h4> <%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
                    </p>
                </div>
            </div>
        <% });  %>
    </div>
</div>

<% include ../partials/footer %>